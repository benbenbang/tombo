{
  "customizations": {
    "vscode": {
      "extensions": [
        "mgmcdermott.vscode-language-babel",
        "dsznajder.es7-react-js-snippets",
        "ms-vscode.vscode-typescript-next",
        "redhat.vscode-yaml",
        "ms-vscode.remote-explorer",
        "GitHub.copilot"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "icon": "pencil",
            "path": "/bin/zsh"
          }
        }
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers-contrib/features/jshint:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-contrib/features/npm-package:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-contrib/features/poetry:2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-contrib/features/pre-commit:2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-contrib/features/typescript:2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    }
  },
  "forwardPorts": [
    3000
  ],
  "image": "mcr.microsoft.com/vscode/devcontainers/typescript-node:16-bullseye",
  "initializeCommand": "cd \"${localWorkspaceFolder}\" && git config --local user.email \"$(git config user.email)\" && git config --local user.name \"$(git config user.name)\"",
  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer/zshrc,target=/root/.zshrc,type=bind",
    "source=${localWorkspaceFolder}/.devcontainer/starship.toml,target=/root/.config/starship.toml,type=bind",
    "source=${localWorkspaceFolder}/.devcontainer/starship.zsh,target=/root/.config/starship.zsh,type=bind",
    "source=${localEnv:HOME}/.gitconfig,target=/root/.gitconfig,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.gnupg,target=/root/.gnupg,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh,target=/root/.ssh,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.oh-my-zsh,target=/root/.oh-my-zsh,type=bind"
  ],
  "name": "react ts devcontainer",
  "onCreateCommand": "curl -sS https://starship.rs/install.sh | sh -s -- -y",
  "postCreateCommand": "mkdir -p /root/.config && cp ${localWorkspaceFolder}/.devcontainer/starship.toml /root/.config/starship.toml && cp ${localWorkspaceFolder}/.devcontainer/starship.zsh /root/.config/starship.zsh",
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/root/.cargo/bin"
  },
  "remoteUser": "root",
  "shutdownAction": "stopContainer"
}
